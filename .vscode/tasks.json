{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "label": "Build All",
      "dependsOn": [
        "busted", "luacheck"
      ]
    },
    {
      "label": "busted",
      "type": "shell",
      "command": "busted",
      "group": "build",
      "presentation": {
        "echo": true,
        "revealProblems": "onProblem",
        "panel": "shared",
        "showReuseMessage": false,
        "clear": true,
        "reveal": "never"
      },
      "problemMatcher": {
        "applyTo": "allDocuments",
        "fileLocation": "autoDetect",
        "source": "busted",
        "pattern":[
          {
            "regexp": "^(Failure|Error)\\s*â†’\\s*([^\\s].*) \\@ (\\d+)$",
            "severity": 1,
            "file": 2,
            "location": 3,
            "message": 3
          }
        ],
      }
    },
    {
      "label": "luacheck",
      "type": "shell",
      "command": "luacheck",
      "args": ["lib", "spec"],
      "group": "build",
      "presentation": {
        "echo": true,
        "revealProblems": "onProblem",
        "reveal": "never",
        "panel": "shared",
        "showReuseMessage": false,
        "clear": true
      },
      "problemMatcher": {
        "applyTo": "allDocuments",
        "fileLocation": "autoDetect",
        "source": "luacheck",
        "pattern":[
          {
            "regexp": "^([^\\s].*)\\((\\d+),(\\d+)\\) : (warning|error) ([^\\s].*): (.*)$",
            "file": 1,
            "line": 2,
            "column": 3,
            "severity": 4,
            "code": 5,
            "message": 6
          }
        ]
      }
    }
  ]
}
